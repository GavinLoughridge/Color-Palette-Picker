<!DOCTYPE html>
<html lang="en">

  <head>
    <!-- head tags -->
    <%- include('partials/headinfo') %>
  </head>

  <body>

    <div id='projectData' data-username="<%= username %>" data-projectname="<%= projectName %>" data-pathhash="<%= pathHash %>" data-palette="<%= palette %>">

    <%- include('partials/navbar') %>

    <section id='tools'>
      <div class='row work'>
        <div class='col s3 toolbar'>
          <h3 class="assignEl">Assign element</h3>
          <div class="selAtr">
            <h5>CURRENT SELECTION</h5>
            <div class="row sel">
              <div class="col s2">
                <p>type:</p>
              </div>
              <div class="col s8">
                <p id='selectedType'></p>
              </div>
            </div>
            <div class="row">
              <div class="col s2">
                <p>id:</p>
              </div>
              <div class="col s8">
                <p id='selectedId'></p>
              </div>
            </div>
            <div class="row">
              <div class="col s2">
                <p>class:</p>
              </div>
              <div class="col s8">
                <p id='selectedClass'></p>
              </div>
            </div>
            <div class="row">
              <div class="col s2">
                <p>content:</p>
              </div>
              <div class="col s8">
                <p id='selectedContent'></p>
              </div>
            </div>
          </div>

          <div>
            <h5>PARENT SELECTOR</h5>
            <select id='elementSelector'>
            </select>
          </div>

          <div>
            <h5>ATTRIBUTE SELECTOR</h5>
            <select id='attributeSelector'>
              <option value='backgroundColor'>Background</option>
              <option value='color'>Text</option>
              <option value='borderColor'>Border</option>
            </select>
          </div>

          <div>
            <h5>GROUP ASSIGNMENT</h5>
            <select id='groupSelector'>
            </select>
          </div>
          <br>
          <div>
            <button id='assign' class="btn waves-effect waves-light" type="button">Assign</button>
          </div>
          <h3 class="SetColor">Set color</h3>
          <div>
            <h5>PICK COLOR</h5>
            <input id='selectedColor' type="color">
          </div>
          <div>
            <h5>PICK GROUP</h5>
            <select id='pickGroup'>
              <option value='primary'>Primary</option>
              <option value='seondary'>Secondary</option>
              <option value='highlight'>Highlight</option>
              <option value='primaryContrast'>Primary Contrast</option>
              <option value='secondaryContrast'>Secondary Contrast</option>
            </select>
          </div>
          <br>
          <div>
            <button id='apply' class="btn waves-effect waves-light" type="button">Apply</button>
          </div>
        </div>

        <div class="col s8">
        <section id='project'>
          <iframe src='/workbench/index.html'>
            Sorry, your browser does not support iframes. Try using chrome.
          </iframe>
        </section>
      </div>
      </div>
    </section>




